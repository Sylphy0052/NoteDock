services:
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    volumes:
      - ./frontend:/app
      - /app/node_modules
    environment:
      - VITE_API_URL=${VITE_API_URL:-http://localhost:8000/api}
    depends_on:
      - backend
    networks:
      - notedock-network

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    volumes:
      - ./backend:/app
      - ./backups:/backups
      - minio-data:/data/minio:ro
    env_file:
      - .env
    environment:
      - DB_HOST=db
      - MINIO_ENDPOINT=http://minio:9000
      - FRONTEND_BASE_URL=http://localhost:3000
    depends_on:
      db:
        condition: service_healthy
      minio:
        condition: service_started
    networks:
      - notedock-network
    labels:
      ofelia.enabled: "true"
      ofelia.job-exec.backup.schedule: "0 0 15 * * *"
      ofelia.job-exec.backup.command: "python -m app.scripts.run_backup"
      ofelia.job-exec.backup.user: "root"

  db:
    image: postgres:16
    ports:
      - "5432:5432"
    environment:
      POSTGRES_USER: ${DB_USER:-notedock}
      POSTGRES_PASSWORD: ${DB_PASSWORD:-notedock}
      POSTGRES_DB: ${DB_NAME:-notedock}
    volumes:
      - db-data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${DB_USER:-notedock} -d ${DB_NAME:-notedock}"]
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - notedock-network

  minio:
    image: minio/minio:latest
    ports:
      - "9000:9000"
      - "9001:9001"
    environment:
      MINIO_ROOT_USER: ${MINIO_ACCESS_KEY:-notedock}
      MINIO_ROOT_PASSWORD: ${MINIO_SECRET_KEY:-notedock-secret}
    volumes:
      - minio-data:/data
    command: server /data --console-address ":9001"
    networks:
      - notedock-network

  minio-init:
    image: minio/mc
    depends_on:
      - minio
    entrypoint: >
      /bin/sh -c "
      sleep 5;
      mc alias set myminio http://minio:9000 ${MINIO_ACCESS_KEY:-notedock} ${MINIO_SECRET_KEY:-notedock-secret};
      mc mb myminio/${MINIO_BUCKET:-notedock-files} --ignore-existing;
      mc anonymous set download myminio/${MINIO_BUCKET:-notedock-files};
      exit 0;
      "
    networks:
      - notedock-network

  backup-scheduler:
    image: mcuadros/ofelia:latest
    container_name: notedock-backup-scheduler
    depends_on:
      - backend
    command: daemon --docker
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    labels:
      ofelia.enabled: "true"
    networks:
      - notedock-network
    restart: unless-stopped

volumes:
  db-data:
  minio-data:

networks:
  notedock-network:
    driver: bridge
